{
    "name": "clearcode/command-bus-console",
    "type": "library",
    "description": "CLI for command bus.",
    "license": "MIT",
    "authors": [
        {
            "name": "Clearcode",
            "homepage": "http://clearcode.cc/"
        }
    ],
    "require": {
        "php": ">=5.5",
        "simple-bus/symfony-bridge": "^4.1",
        "symfony/framework-bundle": "~2.3",
        "symfony/console": "~2.3",
        "symfony/dependency-injection": "~2.3",
        "symfony/http-kernel": "~2.3",
        "symfony/config": "~2.3",
        "ramsey/uuid": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "^0.6.1"
    },
    "autoload": {
        "psr-4" : { "Clearcode\\": "src" }
    },
    "autoload-dev": {
        "psr-4" : { "tests\\Clearcode\\" : "tests" }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
